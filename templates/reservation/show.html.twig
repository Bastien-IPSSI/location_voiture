{% extends 'base.html.twig' %}

{% block title %}Détails de la réservation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de la réservation</h1>
        <p><strong>Véhicule:</strong> {{ reservation.vehicule.marque }} {{ reservation.vehicule.modele }}</p>
        <p><strong>Date de début:</strong> {{ reservation.beginDate|date('d/m/Y') }}</p>
        <p><strong>Date de fin:</strong> {{ reservation.endDate|date('d/m/Y') }}</p>
        <p><strong>Prix total:</strong> {{ reservation.totalPrice }}€</p>
        <p><strong>Statut:</strong> {{ reservation.status }}</p>
        <a href="{{ path('app_reservation_user') }}" class="btn btn-secondary">Retour à la liste</a>
    </div>
{% endblock %}
